{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="https://images.unsplash.com/photo-1647943094297-343842893ba6?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1469&q=80" class="d-block w-100" alt="illustration">
    </div>
    <div class="carousel-item">
      <img src="https://images.unsplash.com/photo-1592365559088-225c15dc3f10?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80" class="d-block w-100" alt="illustration">
    </div>
    <div class="carousel-item">
      <img src="https://images.unsplash.com/photo-1592365559101-19adfefdf294?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80" class="d-block w-100" alt="illustration">
    </div>
  </div>
</div>

<section class="container m-5">
    <div class="row">
        {% for article in articles %}
            <div class="card col-md-3 m-2" style="width: 18rem;">
            <img style="width:150;" src="{{article.photo}}">
            <div class="card-body">
              <h5 class="card-title">{{article.titre}}</h5>
              <p class="card-text">{{article.description}}</p>
              <a href="#" class="btn btn-primary">{{article.auteur}}</a><br>
              <span>{{article.publication | date('d-M-y')}}</span><br>
              <a href="{{path('app_article_delete',{id: article.id})}}"class="text-danger">Delete</a><br>
              <a href="{{path('app_article_edit',{id: article.id})}}"class="text-warning">Modify</a>
            </div>
          </div>
        {% endfor %}
        </div>
</section>
{% endblock %}
